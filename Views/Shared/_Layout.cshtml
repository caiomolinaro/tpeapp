<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TPE App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tpeapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TPE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="Index">Usuários</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Privileges" asp-action="Index">Privilégios</a>
                <a class="nav-link text-light" asp-area="" asp-controller="WeekDays" asp-action="Index">Dias</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Schedules" asp-action="Index">Horários</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Congregations" asp-action="Index">Congregações</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Circuits" asp-action="Index">Circuitos</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Points" asp-action="Index">Pontos</a>
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="PointsCarouselView">PontosCarousel</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Testemunho Público Especial
        </div>
    </footer>i

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
